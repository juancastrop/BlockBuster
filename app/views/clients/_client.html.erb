<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td><%= client.movie.name %></td>
    <td><%= link_to "Ver este cliente", client %></td>
    <td><%= link_to "Editar este cliente", edit_client_path(client) %></td>
    <td><%= button_to "Eliminar este cliente", @client, method: :delete %></td>
  </tr>
</div>
